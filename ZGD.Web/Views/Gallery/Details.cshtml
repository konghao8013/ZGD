@{
    ViewBag.Title = Model.Title;
    ViewBag.Keywords = "中国致公党重庆市委员会";
    ViewBag.Description = "中国致公党重庆市委员会";
}

@model ZGD.Model.NewsInfo

@using ZGD.Common
@using System.Data
@{Html.RenderAction("Top", "Ctrl", new { menuID = ViewBag.TypeID });}

<div class="con_bg main">
    <div class="index_top" style="height:auto;">
        <div class="title"><span>您的位置：首页 &gt; 致公艺苑 &gt;@*@(Model.ClassName) &gt;*@ @(Model.Title)</span></div>
        <div class="index_top_con">
            <div class="article">
                <div class="article_title">
                    <h3>@(Model.Title)</h3>
                    <p><span>作者：@(Model.Author)</span><span>作者：@(Model.PubTime.ToString("yyyy年MM月dd日"))</span></p>
                </div>
                <div class="article_con">
                    @foreach (DataRow item in ViewBag.Pics.Rows)
                    {
                        <div class="pic_item">
                            <img src="@(item["ImgUrl"].ToString())" alt="@(item["Description"].ToString())" />
                            <p>@(item["Description"].ToString())</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
    <div class="space30"></div>
    <hr class="page_hr" />
</div>