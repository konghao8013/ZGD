@{
    ViewBag.Title = "致公艺苑";
    ViewBag.Keywords = "中国致公党重庆市委员会";
    ViewBag.Description = "中国致公党重庆市委员会";
}

@using ZGD.Common
@using System.Data
@{Html.RenderAction("Top", "Ctrl", new { menuID = ViewBag.TypeID });}

<div class="con_bg main">
    <div class="index_top" style="height:auto;">
        <div class="title"><span>您的位置：<a href="/">首页</a> <em>&gt;</em></span> 致公艺苑 @*<em>&gt;</em> @(ViewBag.Type)*@</div>
        <div class="index_top_con">
            <ul class="pic_page">
                @{
                    int idx = 0;
                }
                @foreach (DataRow item in Model.Rows)
                {
                    <li style="@if (idx >0 &&idx % 3 == 0) { @Html.Raw("margin-right:0;") } ">
                        <a href="/gallery/@(item["Id"].ToString()).html" title="@(item["Title"].ToString())"><img src="@(item["ImageSmall"].ToString())" alt="@(item["Title"].ToString())" /></a>
                        <p><a href="/gallery/@(item["Id"].ToString()).html" title="@(item["Title"].ToString())">@(item["Title"].ToString().ToSubString(10))</a></p>
                        <p class="date">作者：<span>@(item["Author"].ToString())</span>&nbsp;<span>@(Convert.ToDateTime(item["PubTime"]).ToString("yyyy年MM月dd日"))</span></p>
                    </li>
                    idx++;
                }
            </ul>
            <div class="pager">
                @Html.Raw(ViewBag.Pager)
            </div>
        </div>
    </div>
    <div class="space30"></div>
    <hr class="page_hr" />
</div>