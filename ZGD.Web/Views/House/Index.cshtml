@{
    ViewBag.Title = "重庆装修楼盘 最新家庭装修装饰楼盘-港宏宜家官网";
    ViewBag.Keywords = "重庆装修,家庭装修,装修装饰,重庆装饰";
    ViewBag.Description = "重庆装修楼盘是港宏宜家装饰重点装修楼盘，在这些重点楼盘中有很多的家庭装修项目，可以通过装修楼盘查看某楼盘的装修在建工程和竣工的装修案例。";
}
@model System.Data.DataTable
@using System.Data
@using ZGD.Common
@section Head
{
    <style type="text/css">
        #content { border-top: solid 1px #8E8E8E; }
    </style>
}
@{Html.RenderAction("Top", "Ctrl", new { menuID = 0 });}

<!--content begin-->
<div id="content" style="padding-top: 0;">
    <div class="main">
        <div class="nav_title">当前位置：<a href="/">首页</a>&gt;<a href="/house">重点楼盘</a></div>
    </div>
    <div class="main">
        <div id="main_con">
            <div class="house_top">
                <div></div>
                <form method="post" id="form_join" class="form">
                    <table>
                        <tr>
                            <td>您的称呼：<input type="text" class="txt" name="UserName" id="join_UserName" /></td>
                            <td>联系电话：<input type="text" class="txt" name="UserTel" id="join_UserTel" /></td>
                            <td><label>验证码：</label><input type="text" class="txt" name="vCode" id="join_vCode" style="width:70px;float:left;" /> <img src="/Tools/verify_code.ashx" onclick="ChangeCode('nl_join_code');" id="nl_join_code" style="height:28px;margin-left:2px;" /></td>
                            <td rowspan="2">
                                <input type="submit" class="btn" value="立即申请" id="btnSubmit" />
                                <input type="hidden" value="1" name="fType" id="join_fType" />
                            </td>
                        </tr>
                        <tr>
                            <td>楼盘名称：<input type="text" class="txt" name="House" id="join_House" /></td>
                            <td>房屋面积：<input type="text" class="txt mj" name="Area" id="join_Area" /></td>
                            <td><p>已有<strong id="join_count">@(ViewBag.jCount)</strong>位业主申请此服务</p></td>
                        </tr>
                    </table>
                </form>

                <script type="text/javascript">
                    $('#form_join').submit(function () {
                        var name = $("#join_UserName").val();
                        var tel = $("#join_UserTel").val();
                        var house = $("#join_House").val();
                        var code = $("#join_vCode").val();
                        if ($.trim(name) == "") {
                            layer.alert("请输入您的称呼!");
                            return false;
                        }
                        if ($.trim(tel) == "" || $.trim(tel).length != 11) {
                            layer.alert("请输入您的电话!");
                            return false;
                        }
                        if ($.trim(house) == "") {
                            layer.alert("请输入您的楼盘名称!");
                            return false;
                        }
                        if ($.trim(code) == "") {
                            layer.alert("请输入您的验证码!");
                            return false;
                        }
                        $(this).ajaxSubmit({
                            url: "/home/fjoin",
                            type: "post",
                            dataType: "json",
                            beforeSubmit: function () {
                                layer.load(1, { shade: [0.1, '#000'] });
                            },
                            error: function () {
                                layer.closeAll('loading');
                                layer.alert("请求失败");
                            },
                            success: function (data) {
                                layer.closeAll('loading');
                                if (data != null) {
                                    if (data.Success) {
                                        layer.alert(data.Msg, function () {
                                            window.location.href = window.location.href;
                                        });
                                    }
                                    else
                                        layer.alert(data.Msg);
                                }
                                else
                                    layer.alert("提交失败");
                            }
                        });
                        return false;
                    });
                </script>
            </div>
            <div class="space20"></div>
            <div id="house_panel">
                <div class="panel_title">
                    <div>
                        <p class="search">
                            <label>搜索</label>
                            <span class="panel">
                                <input name="key" value="@(ViewBag.SearchKey)" type="text" id="a_i_search" />
                                <a href="javascript:;" onclick="searchH()"></a>
                            </span>
                        </p>
                        <span>重点楼盘</span>
                    </div>
                    <script type="text/javascript">
                        function searchH() {
                            var key = $("#a_i_search").val();
                            window.location.href = "/house?key=" + encodeURI(key);
                        }
                    </script>
                </div>
                <div class="space10"></div>
                <div class="house_list">
                    <ul>
                        @{
                            int idx = 1;
                        }
                        @foreach (DataRow item in Model.Rows)
                        {
                            <li @if (idx % 4 == 0) { @Html.Raw("style=\"margin-right:0;\"")                                ; }>
                                <div class="photo"><a href="/house/@(item["ID"].ToString())"><img src="@(item["ImgUrl"].ToString())" /></a></div>
                                <div class="info">
                                    <h3>@(item["Title"].ToString())</h3>
                                    @*<p class="des"><a class="right" href="/project?h=@(item["ID"].ToString())">&gt; 在施工@(item["proCount"].ToString())户</a><a href="/case?t=2&h=@(item["ID"].ToString())">&gt; 楼盘案例</a></p>*@
                                    <p class="des"><span class="right">&gt; 在施工@(item["proCount"].ToString())户</span><a href="/case?t=2&h=@(item["ID"].ToString())">&gt; 楼盘案例</a></p>
                                    <p class="btn_panel"><a href="http://p.qiao.baidu.com//im/index?siteid=8316243&ucid=19605673" target="_blank" class="black">在线咨询</a><a href="/house/@(item["ID"].ToString())" class="red">了解详情</a></p>
                                </div>
                            </li>
idx++;
                        }
                    </ul>
                </div>
                <div class="space10"></div>
                @Html.Raw(ViewBag.Pager)
            </div>
        </div>
    </div>
</div>
<!--content end-->
<div class="space40"></div>