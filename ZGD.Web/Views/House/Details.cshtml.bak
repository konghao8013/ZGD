@model YJ.Model.House
@using System.Data
@using YJ.Common

@{
    ViewBag.Title = Model != null ? Model.Title : "小区详情";
    ViewBag.Keywords = Model.Keyword;
    ViewBag.Description = Model.Description;
}

@section Head
{
    <style type="text/css">
        #content { border-top: solid 1px #8E8E8E; }
        #con_right .bj_panel { border: solid 1px #f2f2f2; }
    </style>
}

@{Html.RenderAction("Top", "Ctrl", new { menuID = 0 });}
<div id="content">
    <div class="main">
        <div class="nav_title">当前位置：<a href="/">首页</a>&gt;<a href="/house">重点楼盘</a>&gt;<a href="/house/@Model.ID">@Model.Title</a></div>
    </div>
    <div class="main">
        <div id="main_con">
            <div id="con_top" style="width:100%;">
                <div id="con_left" style="width:920px;">
                    <div class="panel_title"><div><span>@Model.Title</span></div></div>
                    <div class="house_info">
                        <div class="photo"><img src="@(Model.ImgUrl)" /></div>
                        <div class="house_intro">
                            @*<p class="top"><a href="/project?h=@(Model.ID)">&gt; 正在施工@(Model.pCount)户</a><a href="/case?h=@(Model.ID)">&gt; 设计案例@(Model.cCount)个</a></p>*@
                            <p class="top"><span>&gt; 正在施工@(Model.pCount)户</span><span>&gt; 设计案例@(Model.cCount)个</span></p>
                            <div class="con">
                                @Html.Raw(Server.HtmlDecode(Model.hContent))
                                @*<table cellpadding="0" cellspacing="0" border="0" width="100%">
                                        <tr>
                                            <th>楼盘地址：</th>
                                            <td>重庆两江新区空港新城腾芳大道同盛路7号</td>
                                        </tr>
                                        <tr>
                                            <th>物管费 ：</th>
                                            <td>高层2元/平米 花园洋房2.6元/平米均价：8000元/平方</td>
                                        </tr>
                                        <tr>
                                            <th>主力户型：</th>
                                            <td>二居(111㎡)	三居(230㎡)	三居(160㎡) </td>
                                        </tr>
                                        <tr>
                                            <th>周边配套：</th>
                                            <td>重庆两江新区空港新城腾芳大道同盛路7号</td>
                                        </tr>
                                        <tr>
                                            <th>交通配套：</th>
                                            <td>轻轨3号线和9号线，快速干道（人和－空港新城），多条公交车线路到商圈，江北国际机场3公里</td>
                                        </tr>
                                        <tr>
                                            <th>教育配套：</th>
                                            <td>实验幼儿园，实验三小，回兴小学，暨华中学，八中，海联学院，职教中心，西政学校，南方翻译学院</td>
                                        </tr>
                                        <tr>
                                            <th>医院配套：</th>
                                            <td>渝北区人民医院，渝北区中医院，妇幼保健医院，芳华医院</td>
                                        </tr>
                                    </table>*@
                            </div>
                        </div>
                    </div>
                </div>
                <div id="con_right">
                    <div class="space10"></div>
                    @RenderPage("../Ctrl/_ZxCalc.cshtml")
                </div>
            </div>
            <div class="space10"></div>
            <div id="case_bom">
                @if (ViewBag.AboutCase != null && ViewBag.AboutCase.Rows.Count > 0)
                {
                    <div class="space20"></div>
                    <div class="panel_title2"><div><a href="/case" class="more">更多&gt;&gt;</a><span>户型案例</span></div></div>
                    <div class="nl_list">
                        <ul>
                            @{
                    int idx = 1;
                            }
                            @foreach (DataRow item in ViewBag.AboutCase.Rows)
                            {
                                <li @if (idx % 4 == 0) { @Html.Raw("style=\"margin-right:0;\"")                                  ; }>
                                    <a href="/case/@(item["Id"].ToString())" target="_blank">
                                        <img src="@(item["ImageSmall"].ToString())" alt="@(item["Title"].ToString())">
                                    </a>
                                    <div>
                                        <span><b>设计师：</b><a href="/designer/@(item["DesignerId"].ToString())">@(item["DesignerName"].ToString())</a></span>
                                        <span><b>造&nbsp;&nbsp;&nbsp;价：</b>@(item["Price"].ToString())万</span>
                                        <span><b>风&nbsp;&nbsp;&nbsp;格：</b>@(item["fg"].ToString())</span>
                                        <span><b>户&nbsp;&nbsp;&nbsp;型：</b>@(item["hx"].ToString())</span>
                                    </div>
                                    <p><a href="http://wpa.qq.com/msgrd?v=3&uin=447762841&site=qq&menu=yes" class="black">在线咨询</a><a href="/case/@(item["Id"].ToString())" class="red">了解详情</a></p>
                                </li>
idx++;
                            }
                        </ul>
                        <div class="space1"></div>
                    </div>
                }
                @if (ViewBag.AboutHouse != null && ViewBag.AboutHouse.Rows.Count > 0)
                {
                    <div class="space20"></div>
                    <div class="panel_title2"><div><a href="/house" class="more">更多&gt;&gt;</a><span>推荐楼盘</span></div></div>
                    <div class="a_house_list">
                        <ul>
                            @{
                    int idx = 1;
                            }
                            @foreach (DataRow item in ViewBag.AboutHouse.Rows)
                            {
                                <li @if (idx % 4 == 0) { @Html.Raw("style=\"margin-right:0;\"")                                   ; }>
                                    <div>
                                        <a href="/house/@(item["Id"].ToString())" target="_blank">
                                            <img src="@(item["ImgUrl"].ToString())" alt="@(item["Title"].ToString())">
                                        </a>
                                        <h3><p>@(item["Title"].ToString())</p></h3>
                                    </div>
                                </li>
idx++;
                            }
                        </ul>
                        <div class="space1"></div>
                    </div>
                    <div class="space20"></div>
                }
            </div>
        </div>
    </div>
</div>