@{
    ViewBag.Title = "案例";
    ViewBag.Keywords = "";
    ViewBag.Description = "";
}
@section Head
{
    <style type="text/css">
        #content { border-top: solid 1px #8E8E8E; }
        #con_right .bj_panel { border: solid 1px #f2f2f2; }
    </style>
}
@using System.Data
@using YJ.Common

@{Html.RenderAction("Top", "Ctrl", new { menuID = 2 });}
<!--content begin-->
<div id="content">
    <div class="main">
        <div class="nav_title">当前位置：<a href="/">首页</a>&gt;<a href="/case">家装案例</a></div>
    </div>
    <div class="main con_panel">
        <div id="main_con">
            <div class="panel_title"><div><span>装修案例</span></div></div>
            <div id="con_top">
                <div id="con_left" style="width:920px;">
                    <div class="nl_filter">
                        <table cellpadding="0" cellspacing="0">
                            <tbody>
                                <tr>
                                    <th valign="top">风格：</th>
                                    <td valign="top">
                                        <a href="/case?fg=&hx=@(ViewBag.FilterHX)&jg=@(ViewBag.FilterJG)&d=@(ViewBag.FilterDes)&mj=@(ViewBag.FilterMJ)" @if (string.IsNullOrWhiteSpace(ViewBag.FilterFG)) { @Html.Raw("class=\"onNav\"")                   ; }>全部</a>
                                        @foreach (DataRow item in ViewBag.DataFG.Rows)
                                        {
                                            <a href="/case?fg=@(item["Id"].ToString())&hx=@(ViewBag.FilterHX)&jg=@(ViewBag.FilterJG)&mj=@(ViewBag.FilterMJ)" @if (!string.IsNullOrWhiteSpace(ViewBag.FilterFG) && ViewBag.FilterFG == item["Id"].ToString()) { @Html.Raw("class=\"onNav\"")                  ; }>@(item["Title"].ToString())</a>
                                        }
                                    </td>
                                </tr>
                                <tr>
                                    <th valign="top">户型：</th>
                                    <td valign="top">
                                        <a href="/case?fg=@(ViewBag.FilterFG)&hx=&jg=@(ViewBag.FilterJG)&d=@(ViewBag.FilterDes)&mj=@(ViewBag.FilterMJ)" @if (string.IsNullOrWhiteSpace(ViewBag.FilterHX)) { @Html.Raw("class=\"onNav\"")                     ; }>全部</a>
                                        @foreach (DataRow item in ViewBag.DataHX.Rows)
                                        {
                                            <a href="/case?fg=@(ViewBag.FilterFG)&hx=@(item["Id"].ToString())&jg=@(ViewBag.FilterJG)&mj=@(ViewBag.FilterMJ)" @if (!string.IsNullOrWhiteSpace(ViewBag.FilterHX) && ViewBag.FilterHX == item["Id"].ToString()) { @Html.Raw("class=\"onNav\"")                    ; }>@(item["Title"].ToString())</a>
                                        }
                                    </td>
                                </tr>
                                @*<tr>
                                    <th valign="top">面积：</th>
                                    <td valign="top">
                                        <a href="/case?fg=@(ViewBag.FilterFG)&hx=@(ViewBag.FilterHX)&jg=@(ViewBag.FilterJG)&d=@(ViewBag.FilterDes)&mj=" @if (string.IsNullOrWhiteSpace(ViewBag.FilterMJ)) { @Html.Raw("class=\"onNav\"")                      ; }>全部</a>
                                        @foreach (DataRow item in ViewBag.DataMJ.Rows)
                                        {
                                            <a href="/case?fg=@(ViewBag.FilterFG)&hx=@(ViewBag.FilterHX)&jg=@(ViewBag.FilterJG)&mj=@(item["Id"].ToString())" @if (!string.IsNullOrWhiteSpace(ViewBag.FilterMJ) && ViewBag.FilterMJ == item["Id"].ToString()) { @Html.Raw("class=\"onNav\"")                           ; }>@(item["Title"].ToString())</a>
                                        }
                                    </td>
                                </tr>*@
                                <tr>
                                    <th valign="top">设计师：</th>
                                    <td valign="top">
                                        <a href="/case?fg=@(ViewBag.FilterFG)&hx=@(ViewBag.FilterHX)&jg=@(ViewBag.FilterJG)&d=&mj=@(ViewBag.FilterMJ)" @if (string.IsNullOrWhiteSpace(ViewBag.FilterDes)) { @Html.Raw("class=\"onNav\"")                     ; }>全部</a>
                                        @{
                                            int idx_des = 1;
                                        }
                                        @foreach (DataRow item in ViewBag.DataDes.Rows)
                                        {
                                            if (idx_des < 15)
                                            {
                                                <a href="/case?fg=@(ViewBag.FilterFG)&hx=@(ViewBag.FilterHX)&jg=@(ViewBag.FilterJG)&d=@(item["Id"].ToString())&mj=@(ViewBag.FilterMJ)" @if (!string.IsNullOrWhiteSpace(ViewBag.FilterDes) && ViewBag.FilterDes == item["Id"].ToString()) { @Html.Raw("class=\"onNav\"")                      ; }>@(item["Name"].ToString())</a>
                                            }
                                            idx_des++;
                                        }
                                        <a href="/designer">&gt;&gt;</a>
                                    </td>
                                </tr>
                                <tr>
                                    <th valign="top">价格：</th>
                                    <td valign="top">
                                        <a href="/case?fg=@(ViewBag.FilterFG)&hx=@(ViewBag.FilterHX)&jg=&d=@(ViewBag.FilterDes)&mj=@(ViewBag.FilterMJ)" @if (string.IsNullOrWhiteSpace(ViewBag.FilterJG)) { @Html.Raw("class=\"onNav\"")                        ; }>全部</a>
                                        @foreach (DataRow item in ViewBag.DataJG.Rows)
                                        {
                                            <a href="/case?fg=@(ViewBag.FilterFG)&hx=@(ViewBag.FilterHX)&jg=@(item["Id"].ToString())&mj=@(ViewBag.FilterMJ)" @if (!string.IsNullOrWhiteSpace(ViewBag.FilterJG) && ViewBag.FilterJG == item["Id"].ToString()){ @Html.Raw("class=\"onNav\"") ; }>@(item["Title"].ToString())</a>
                                        }
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                        <div class="nl_sort">
                            <table cellpadding="0" cellspacing="0">
                                <tbody>
                                    <tr>
                                        <th valign="top">排序：</th>
                                        <td>
                                            <a href="/Case?fg=&hx=&jg=&d=&sort=0" @if (!string.IsNullOrWhiteSpace(ViewBag.FilterSort) && ViewBag.FilterSort == "0") { @Html.Raw("class=\"onNav\"")                      ; }>默认<i></i></a>
                                            <a href="/Case?fg=&hx=&jg=&d=&sort=1" @if (!string.IsNullOrWhiteSpace(ViewBag.FilterSort) && ViewBag.FilterSort == "1") { @Html.Raw("class=\"onNav\"")                      ; }>推荐<i></i></a>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <div id="con_right">
                    @RenderPage("../Ctrl/_ZxCalc.cshtml")
                </div>
            </div>
            <div class="space30"></div>
            <div id="case_bom">
                <div class="nl_list">
                    <ul>
                        @{
                            int idx = 1;
                        }
                        @foreach (DataRow item in Model.Rows)
                        {
                            <li @if (idx % 4 == 0) { @Html.Raw("style=\"margin-right:0;\"")                          ; }>
                                <a href="/case/@(item["Id"].ToString())" target="_blank">
                                    <img src="@(item["ImageSmall"].ToString())" alt="@(item["Title"].ToString())">
                                </a>
                                <div>
                                    <span><b>设计师：</b><a href="/designer/@(item["DesignerId"].ToString())">@(item["Name"].ToString())</a></span>
                                    <span><b>造&nbsp;&nbsp;&nbsp;价：</b>@(item["Price"].ToString())万</span>
                                    <span><b>风&nbsp;&nbsp;&nbsp;格：</b>@(item["fg"].ToString())</span>
                                    <span><b>户&nbsp;&nbsp;&nbsp;型：</b>@(item["hx"].ToString())</span>
                                </div>
                                <p><a href="http://wpa.qq.com/msgrd?v=3&uin=447762841&site=qq&menu=yes" target="_blank" class="black">在线咨询</a><a href="/case/@(item["Id"].ToString())" class="red">了解详情</a></p>
                            </li>
idx++;
                        }
                    </ul>
                    <div class="space1"></div>
                    @Html.Raw(ViewBag.Pager)
                </div>
                <script type="text/javascript">
                    $(".nl_list li").hover(function () {
                        $(this).addClass("hover");
                    }, function () {
                        $(this).removeClass("hover");
                    })
                </script>
            </div>
            <div class="space1"></div>
        </div>
    </div>
</div>
<!--content end-->
<div class="space10"></div>