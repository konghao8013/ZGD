@{
    ViewBag.Title = string.IsNullOrWhiteSpace(ViewBag.Filter_Val) ? "装修效果图大全 2018装修设计效果图 重庆家装实景图-港宏宜家装饰效果图大全" : ViewBag.Filter_Val + "装修效果图";
    ViewBag.Keywords = string.IsNullOrWhiteSpace(ViewBag.Filter_Val) ? "装修效果图,装修效果图大全,装修设计效果图,实景图,装饰效果图,家装效果图" : ViewBag.Filter_Val + "装修效果图";
    ViewBag.Description = string.IsNullOrWhiteSpace(ViewBag.Filter_Val) ? "港宏宜家装饰效果图库提供优质家居装修效果图片、家装实景图片以及重庆最新家庭装修案例欣赏，为装修房子、房间提供设计参考，帮您装饰出完美家居。" : ViewBag.Filter_Val + "装修效果图，港宏宜家装饰为您提供最新"+ ViewBag.Filter_Val + "装修效果图";
