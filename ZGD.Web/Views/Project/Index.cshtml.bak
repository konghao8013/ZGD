@{
    ViewBag.Title = "装修工地";
    ViewBag.Keywords = "装修知识家居装修,装修材料,家居风水,家装设计家居装修资讯,家装行业资";
    ViewBag.Description = "装修知识是港宏宜家装饰网推出的家居装修资讯、家装行业资讯内容，包含家装攻略、装修材料、家装设计、家居风水和港宏动态，想要了解家居装修资讯、家装行业资讯的朋友们可以从家装攻略、装修材料、家装设计、家居风水中了解到，想要了解港宏宜家装饰最新优惠、最新动向的朋友们可以在港宏动态中了解到。";
}
@model System.Data.DataTable
@using System.Data
@using YJ.Common
@section Head
{
    <style type="text/css">
        #content { border-top: solid 1px #8E8E8E; }
        #main_con { background-color: transparent; padding: 0; }
    </style>
}
@{Html.RenderAction("Top", "Ctrl", new { menuID = 1, Title = "装修工地" });}
<!--content begin-->
<div id="content">
    <div class="main">
        <div class="nav_title">当前位置：<a href="/">首页</a>&gt;<a href="/project">装修工地</a></div>
    </div>
    <div class="main">
        <div id="main_con">
            <div id="con_left" style="width:880px;padding:20px;background-color:#fff;">
                <div class="ty_list">
                    <ul>
                        @{
                            int n_idx = 0;
                        }
                        @foreach (DataRow item in Model.Rows)
                        {
                            <li @if (n_idx % 2 == 0) { @Html.Raw("class=\"ty_bg_1\"")        ; }>
                                <div class="ty_item">
                                    <a href="/project/@(item["Id"].ToString())"><img src="@(item["ImgUrl"].ToString())" /></a>
                                    <div class="word_mid">
                                        <div>
                                            <h3><a href="/project/@(item["Id"].ToString())">@(item["Title"].ToString())</a></h3>
                                            <p class="date">@(Convert.ToDateTime(item["PubTime"]).ToString("yyyy-MM-dd HH:mm"))</p>
                                        </div>
                                        <p class="des">@(item["Description"].ToString().ToSubString(55))</p>
                                        <p class="btn_panel"><a href="/project/@(item["Id"].ToString())">查看详情</a></p>
                                    </div>
                                </div>
                            </li>
                            n_idx++;
                        }
                    </ul>
                    @Html.Raw(ViewBag.Pager)
                </div>
                <script type="text/javascript">
                    $(".ty_list li").hover(function () {
                        $(this).addClass("hover");
                    }, function () {
                        $(this).removeClass("hover");
                    })
                </script>
            </div>
            <div id="con_right">
                @RenderPage("../Ctrl/_ZxCalc.cshtml")
                <div class="space20"></div>
                @*@{Html.RenderAction("HotHouse", "Ctrl", new { top = 4 });}*@
                @RenderPage("../Ctrl/_HotHouse.cshtml")
                <div class="space20"></div>
                @*@{Html.RenderAction("HotAct", "Ctrl");}*@
                @RenderPage("../Ctrl/_HotAct.cshtml")
            </div>
        </div>
    </div>
</div>
<!--content end-->
<div class="space40"></div>